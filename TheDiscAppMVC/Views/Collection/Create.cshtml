@model TheDiscAppMVC.Models.Collection.CollectionCreate

@{
    ViewData["Title"] = "Create";
}

<h2>Add a collection</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="PlayerId" class="control-label"></label>
                <br />
                @Html.DropDownListFor(c => c.PlayerId, Model.PlayerOptions)
                <span asp-validation-for="PlayerId" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="DiscId" class="control-label"></label>
                <br />
                @Html.DropDownListFor(c => c.DiscId, Model.DiscOptions)
                <span asp-validation-for="DiscId" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Add!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="action-links" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
