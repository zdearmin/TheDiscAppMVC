@model TheDiscAppMVC.Models.Collection.CollectionEdit

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Collection : @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerId" class="control-label"></label>
                @Html.DropDownListFor(c => c.PlayerId, Model.PlayerOptions)
                <span asp-validation-for="PlayerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscId" class="control-label"></label>
                @Html.DropDownListFor(c => c.DiscId, Model.DiscOptions)
                <span asp-validation-for="DiscId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
