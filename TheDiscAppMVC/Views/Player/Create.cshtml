@model TheDiscAppMVC.Models.Player.PlayerCreate

@{
    ViewData["Title"] = "Create";
}

<h2>Add a player</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="PdgaNumber" class="control-label"></label>
                <input asp-for="PdgaNumber" class="form-control" />
                <span asp-validation-for="PdgaNumber" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="PdgaRating" class="control-label"></label>
                <input asp-for="PdgaRating" class="form-control" />
                <span asp-validation-for="PdgaRating" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <br />
                @Html.DropDownListFor(p => p.TeamId, Model.TeamOptions, "Select One...")
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Add!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="action-links" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
