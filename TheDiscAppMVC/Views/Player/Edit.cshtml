@model TheDiscAppMVC.Models.Player.PlayerEdit

@{
    ViewData["Title"] = "Edit";
}

<h2>Player : @Model.Name</h2>

<hr />

<div style="float:right">
    <img src="~/Images/person-image-not-found.png" class="img-thumbnail" width="300rem"/>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="PdgaNumber" class="control-label"></label>
                <input asp-for="PdgaNumber" class="form-control" />
                <span asp-validation-for="PdgaNumber" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="PdgaRating" class="control-label"></label>
                <input asp-for="PdgaRating" class="form-control" />
                <span asp-validation-for="PdgaRating" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <br />
                @Html.DropDownListFor(p => p.TeamId, Model.TeamOptions)
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="action-links" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
