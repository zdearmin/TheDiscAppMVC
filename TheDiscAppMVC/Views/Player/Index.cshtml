@model IEnumerable<TheDiscAppMVC.Models.Player.PlayerListItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Player Index</h1>

<p>
    <a class="action-links btn btn-primary btn-secondary" asp-action="Create">Add a new player</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <img src="~/Images/person-image-not-found.png" class="img-thumbnail" width="25rem">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { style = "text-decoration: none;"}) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { style = "text-decoration: none;"}) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { style = "text-decoration: none;"})
            </td>
        </tr>
}
    </tbody>
</table>
